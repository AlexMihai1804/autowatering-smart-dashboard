VITE_AI_DOCTOR_API_URL=https://api.example.com/aiDoctor
VITE_PLANT_ID_API_URL=https://api.example.com/plantId

# AWS Cognito (required for login + premium).
VITE_AWS_REGION=
VITE_COGNITO_USER_POOL_ID=
VITE_COGNITO_APP_CLIENT_ID=

# Optional Google via Cognito Hosted UI.
VITE_COGNITO_HOSTED_UI_DOMAIN=
VITE_COGNITO_REDIRECT_URI=
VITE_COGNITO_LOGOUT_URI=
VITE_COGNITO_GOOGLE_ENABLED=

# Optional explicit premium endpoints.
# If omitted and VITE_AI_DOCTOR_API_URL ends with /aiDoctor,
# routes are auto-derived:
# - /subscriptionStatus
# - /createSubscriptionCheckout
# - /createBillingPortalSession
VITE_SUBSCRIPTION_STATUS_API_URL=
VITE_SUBSCRIPTION_CHECKOUT_API_URL=
VITE_SUBSCRIPTION_BILLING_PORTAL_API_URL=
VITE_PROFILE_GET_API_URL=
VITE_PROFILE_UPDATE_API_URL=
VITE_USER_STATE_GET_API_URL=
VITE_USER_STATE_SAVE_API_URL=
VITE_ACCOUNT_DELETE_API_URL=

# Optional OTA firmware update endpoints.
# Option A: base URL + default channel/board (app calls /ota/latest and /ota/releases/{version}/download-url).
VITE_OTA_API_BASE_URL=
VITE_OTA_CHANNEL=stable
VITE_OTA_BOARD=arduino_nano_33_ble
# Optional: if true, derive OTA base from VITE_AI_DOCTOR_API_URL by replacing /aiDoctor with /.
VITE_OTA_DERIVE_FROM_AI_DOCTOR=false
# Optional: send Authorization bearer token on OTA requests.
# Keep false for public/signed-URL OTA APIs that do not allow Authorization in CORS.
VITE_OTA_SEND_AUTH=false

# Option B: explicit endpoint URLs.
VITE_OTA_LATEST_API_URL=
# Supports "{version}" placeholder, e.g. https://api.example.com/ota/releases/{version}/download-url
VITE_OTA_DOWNLOAD_URL_API_URL=
# IMPORTANT: keep all OTA URLs on the same backend host (metadata + download resolution).

# Native deep link scheme used for Stripe return on Android/iOS.
VITE_APP_URL_SCHEME=autowatering
